{
  "name": "@avil13/create-app",
  "version": "1.0.4",
  "description": "Simple way for creating node app",
  "main": "dist/index.js",
  "types": "dist",
  "license": "MIT",
  "author": {
    "name": "avil13",
    "url": "https://github.com/avil13"
  },
  "bin": {
    "avil13-create-app": "dist/index.js",
    "cva": "dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node --project tsconfig.json src/index.ts",
    "dev:watch": "nodemon",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rm -rf ./dist && tsc -p ./tsconfig.prod.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && git update-index --again",
      "pre-push": "yarn test",
      "post-checkout": "yarn"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6.8.0",
    "git": ">=2.11.0",
    "yarn": ">=1.7.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "enquirer": "^2.3.6",
    "minimist": "^1.2.5",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@babel/core": "7",
    "@types/jest": "^26.0.20",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.33",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "keywords": [
    "create",
    "app",
    "typescript",
    "nodejs",
    "package"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avil13/avil13-create-app"
  },
  "bugs": {
    "url": "https://github.com/avil13/avil13-create-app/issues"
  }
}
